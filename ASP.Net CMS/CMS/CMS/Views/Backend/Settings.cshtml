@model CMS_Blog.Models.Blog

@{
    ViewBag.Title = "Settings";
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.Partial("~/Views/Shared/_BackendNavBar.cshtml")
<script src="~/Content/ckeditor/ckeditor.js"></script>
<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml", Model)

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

            <!-- Überschrift -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Einstellungen</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2"></div>
                </div>
            </div>
            @using (Html.BeginForm("EditTitle", "Backend", FormMethod.Post))
    {

        <div class="form-group">
            <label for="titel">Titel</label>
            <input type="text" class="form-control" value="@Model.Title" name="title" id="blogTitle">
        </div>
       
        <div class="form-group">
            <label for="blogprivacy">Datenschutz</label>
            <textarea name="privacy" id="blogprivacy">
                
                @Html.Display(CMS_Blog.Models.Privacy.GetPrivacy())
            </textarea>
        </div>

        <div class="form-group">
            <p><input type="submit" class="btn btn-outline-primary" value="Speichern"></p>
        </div>
}

        </main>
    </div>
</div>
<script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
<script>
    feather.replace()

    CKEDITOR.replace('blogprivacy', {
        removePlugins: ['easyimage', 'image']
    }
    );
    
</script>

