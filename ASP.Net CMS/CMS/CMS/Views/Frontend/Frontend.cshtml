@model CMS_Blog.Models.Blog

@{
    ViewData["Title"] = "Blog";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="/Content/css_bootstrap/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/css/jquery-ui.min.css" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <style>
        .h1_title {
            font-family: 'Kaushan Script', cursive;
            font-size: 4em;
            margin-bottom: 0.5em !important;
        }

        .carousel-item span {
            position: absolute;
            width: 50%;
            top: 2em;
            line-height: 2em;
            font-family: 'Kaushan Script', cursive;
            font-size: 2em;
        }

        .featurette-image-span span {
            position: absolute;
            width: 50%;
            top: auto;
            bottom: 0;
            line-height: 2em;
            text-align: center;
            background-color: silver;
            background-color: hsla(0, 0%, 100%, 0.5);
        }

        .featurette-divider {
            margin: 40px 0px; /* Space out the Bootstrap <hr> more */
            border: 1px solid #eeeeee;
            border-top: 1px solid #eeeeee;
            width: 100%;
        }

        .featurette {
             /* Vertically center images part 1: add padding above and below text. */
            overflow: hidden; /* Vertically center images part 2: clear their floats. */
        }

        .featurette-image {
            /* Vertically center images part 3: negative margin up the image the same amount of the padding to center it. */
            display: block;
            max-width: 400px;
            
        }


            /* Give some space on the sides of the floated elements so text doesn't run right into it. */
            .featurette-image.pull-left {
                margin-right: 40px;
            }

            .featurette-image.pull-right {
                margin-left: 40px;
            }

        /* Thin out the marketing headings */
        .featurette-heading {
            font-size: 50px;
            font-weight: 300;
            line-height: 1;
            letter-spacing: -1px;
            font-family: 'Kaushan Script', cursive;
            font-size: 2.5em;
        }

        .pull-right {
            float: right;
        }

        .pull-left {
            float: left;
        }

        .lead {
            margin-bottom: 20px;
            font-size: 21px;
            font-weight: 200;
            line-height: 30px;
        }
    </style>
</head>
<body>
    <header>
        <ul class="nav justify-content-end bg-dark">
           
            <li class="nav-item">
                <div id="dialog-1" title="Datenschutzerklärung">
                    @Html.Raw(CMS_Blog.Models.Privacy.GetPrivacy())
                </div>
                <a class="nav-link text-white" id="opener-DS" href="#">Datenschutzerklärung</a>
            </li>
            <li class="nav-item">
                <div id="dialog-2" title="Impressum">
                    @Html.Raw(CMS_Blog.Models.Imprint.GetImprint())
                </div>
                <a class="nav-link text-white" id="opener-IMP" href="#">Impressum</a>
            </li>
        </ul>
    </header>
    <div class="container bg-white">
        <div class="row">

            <main role="main" class="col px-4">
                <div class="container">
                    <div class="d-flex justify-content-center align-items-center px-4">
                        @if (!(Model == null))
                        {
                            <h1 class="h1_title">@Model.Title</h1>
                        }
                    </div>
                </div>
            </main>
        </div>

        <div class="row">
            <div class="col">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">

                        @for (int i = 0; i < Model.Posts.Count; i++)
                        {
                            if (i == 0)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to=@i class="active"></li>
                            }
                            else
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to=@i></li>
                            }
                        }

                    </ol>
                    <div class="carousel-inner">
                        @for (int x = 0; x < Model.Posts.Count; x++)
                        {

                            if (x == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="@Model.Posts[x].TitleImage" class="d-block w-100 h-100">
                                    <span class="bg-light">@Model.Posts[x].Title</span>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="@Model.Posts[x].TitleImage" class="d-block w-100 h-100">
                                    <span class="bg-light">@Model.Posts[x].Title</span>
                                </div>
                            }

                        }

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="container bg-white">
            @for (int y = 0; y < Model.Posts.Count; y++)
            {

                <div class="row">
                    <hr class="featurette-divider" />
                    <div class="featurette col-12">


                        <img class="featurette-image pull-left mb-5" src="@Model.Posts[y].TitleImage">



                        <h1 class="featurette-heading mb-md-1">@Model.Posts[y].Title</h1>

                        <p class="lead">
                            @Html.Raw(Model.Posts[y].Text)
                            <a class="text-primary" data-toggle="collapse" href="#@Model.Posts[y].Id" role="button" aria-expanded="false" aria-controls="collapseExample">KOMMENTARE... &raquo;</a>
                        </p>
                        <div class="collapse" id="@Model.Posts[y].Id">

                            <div class="row">
                                <hr class="featurette-divider" />
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    @if (Model.Posts[y].Comments.Count > 0)
            {
                        <h4>Kommentare zu diesem Beitrag</h4>
foreach (var item in Model.Posts[y].Comments)
{
                        <div class="comment lead">
                            <span><b>@item.UserName</b></span><br />
                            <span>geschrieben am <span class="text-primary">@item.Date</span></span>
                            <div class="card comment-card">
                                <div class="card-body">
                                    <p>@item.Text</p>
                                </div>
                            </div>
                        </div>
}
}
                                </div>

                            </div>

                            <div class="row">
                                <hr class="featurette-divider" />
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <h4>Schreibe einen Kommentar</h4>
                                    @using (Html.BeginForm("Create", "Comment", FormMethod.Post, "comment-form"))
            {
                        <div class="form-group col-md-6 invisible">
                            <input type="text" name="id" value="@Model.Posts[y].Id" class="form-control" id="id" placeholder="Name" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" name="name" class="form-control" id="inputName" placeholder="Name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email (optional)">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <textarea class="form-control" name="text" id="validationTextarea" placeholder="Kommentar"></textarea>
                            </div>
                        </div>
                        <div class="form-row float-right">
                            <input class="btn btn-outline-primary" type="submit" value="KOMMENTAR ABSCHICKEN" />
                        </div>
}
                                </div>
                            </div>

                        </div>

                        <div>
                            <span>@Model.Posts[y].Date.ToLongDateString() - </span><span class="text-primary">@Model.Posts[y].User.Alias</span> - <a><span data-feather="message-square"></span>@Model.Posts[y].Comments.Count</a>
                        </div>


                    </div>
                </div>
            }


            <div class="row">
                <hr class="featurette-divider" />

            </div>

            <footer>
                <p class="pull-left">Copyright 2019</p>
                <a class="text-primary pull-right" href="#">Nach oben</a>

            </footer>
        </div>


    </div>




    <script type="text/javascript" language="javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    <script type="text/javascript" src="~/js_jquery/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/Content/js/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/js_bootstrap/bootstrap.min.js"></script>
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
        feather.replace()

        $(function () {
            $("#dialog-1").dialog({
                autoOpen: false,
                show: "slide",
                width: 600,
                height: 400
            });
            $("#opener-DS").click(function () {
                $("#dialog-1").dialog("open");
            });

        });
        $(function () {
            $("#dialog-2").dialog({
                autoOpen: false,
                show: "slide",
                width: 600,
                height: 400
            });
            $("#opener-IMP").click(function () {
                $("#dialog-2").dialog("open");
            });
        });
    </script>
</body>

</html>

