@model CMS_Blog.Models.Blog

<nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <div class="sidebar-sticky">
        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Verwalten</span>
        </h6>
        <ul class="nav flex-column mb-2">
            <li class="nav-item">
                <div class="d-flex justify-content-between align-items-center mt-1 mr-3">
                    <a class="nav-link" href=@Url.Action("Post", "Post", CMS_Blog.Models.Blog.Get())><span data-feather="file-text"></span>Blogeinträge</a>
                    <a class="d-flex align-items-center" href="@Url.Action("AddPost", "Post", CMS_Blog.Models.Blog.Get())" data-toggle="modal" data-target="#exampleModalCenter">
                        <span class="text-muted" data-feather="plus-circle"></span>
                    </a>
                </div>
            </li>
        </ul>
        <ul class="nav flex-column mb-2">
            <li class="nav-item">
                <a class="nav-link" href=@Url.Action("Pictures", "Backend")><span data-feather="image"></span>Medien</a>
            </li>
        </ul>
        <ul class="nav flex-column mb-2">
            <li class="nav-item">
                <a class="nav-link" href=@Url.Action("Comments", "Backend")>
                    <span data-feather="message-square"></span>Kommentare
                    <span class="badge badge-pill badge-primary">@CMS_Blog.Models.Comment.GetAll(CMS_Blog.Models.Comment.STATE_OPEN).Count()</span>
                </a>
            </li>
        </ul>
        @if (CMS_Blog.Models.User.Get(Session["UserId"].ToString()).Role == 1) { 
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                <span>Konfigurieren</span>
            </h6>
            <ul class="nav flex-column mb-2">

                <li class="nav-item">
                    <div class="d-flex justify-content-between align-items-center mt-1 mr-3">
                        <a class="nav-link" href=@Url.Action("User", "User", CMS_Blog.Models.User.GetAll())><span data-feather="users"></span>Personen</a>
                        <a class="d-flex align-items-center" href="@Url.Action("AddUser", "User")" data-toggle="modal" data-target="#exampleModalCenter">
                            <span class="text-muted" data-feather="plus-circle"></span>
                        </a>
                    </div>
                </li>
            </ul>
            <ul class="nav flex-column mb-2">
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("User", "User")><span data-feather="settings"></span>Einstellungen</a>
                </li>
            </ul>
        }
        <!---------------------->
    </div>
</nav>