@model CMS_Blog.Models.Post

@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Post";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css_bootstrap/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <style>
        .featurette-divider {
            margin: 60px 0px; /* Space out the Bootstrap <hr> more */
            border: 1px solid #eeeeee;
            border-top: 1px solid #eeeeee;
            width: 100%;
        }

        .comment {
            margin-top: 1em;
        }

        .comment-card {
            margin-top: 1em;
            margin-left: 2em;
        }

        .blog-image {
            margin-top: 1em;
            margin-bottom: 1em;
        }

        .h1_title {
            font-family: 'Kaushan Script', cursive;
            font-size: 4em;
        }

        .pull-right {
            float: right;
        }

        .pull-left {
            float: left;
        }

        .comment-form {
            margin-top: 2em;
        }
    </style>
</head>
<body>
    <header>
        <ul class="nav justify-content-end bg-dark">
            <li class="nav-item">
                @*<a class="nav-link text-white" href="#">Datenschutz</a>*@
                <div id="modalDatenschutz" class="modal">
                    <p>Datenschutz Quatsch</p>
                    <a href="#" rel="modal:close">Close</a>
                </div>
                <a href="#modalDatenschutz" rel="modal:open">Open Modal</a>

            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="#">Impressum</a>
            </li>
        </ul>
    </header>
    <div class="container-fluid">
        <div class="row">

            <main role="main" class="col px-4">
                <div class="container">
                    <div class="d-flex justify-content-center align-items-center px-4">
                        <h1 class="h1_title">@Model.Title</h1>
                    </div>
                </div>
            </main>
        </div>


        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-center align-items-center px-4 blog-image">
                        <img src="~/Images/natur1.jpg">
                    </div>
                </div>



            </div>
            <div class="row">
                <div class="col-12">
                    <p class="lead">
                        @Model.Text
                    </p>
                </div>
            </div>

            <div class="row">
                <hr class="featurette-divider" />

            </div>

            <div class="row">
                <div class="col-12">
                    <h2>Schreibe einen Kommentar</h2>
                    @using (Html.BeginForm("Save", "Comment", null, FormMethod.Post, null, "comment-form"))
                    {
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" name="name" class="form-control" id="inputName" placeholder="Name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email (optional)">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <textarea class="form-control" name="comment" id="validationTextarea" placeholder="Kommentar" required></textarea>
                            </div>
                        </div>
                        <div class="form-row float-right">
                            <input class="btn btn-outline-primary" type="submit" value="KOMMENTAR ABSCHICKEN" />

                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <hr class="featurette-divider" />

            </div>

            <div class="row">
                <div class="col-12">
                    <h2>Kommentare zu diesem Beitrag</h2>

                    @foreach (var item in Model.Comments)
                    {
                        <div class="comment lead">
                            <span><b>@item.UserName</b></span><br />
                            <span>geschrieben am <span class="text-primary">@item.Date</span></span>

                            <div class="card comment-card">
                                <div class="card-body">
                                    <p>@item.Text</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

            <div class="row">
                <hr class="featurette-divider" />

            </div>
            <footer>
                <p class="pull-left lead">Copyright 2019</p>
                <a class="text-primary pull-right lead" href="#">Nach oben</a>
            </footer>
        </div>
    </div>




    <script type="text/javascript" language="javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    <script type="text/javascript" src="~/js_jquery/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/js_bootstrap/bootstrap.min.js"></script>
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>

    <script>
        feather.replace()
    </script>
</body>

</html>

