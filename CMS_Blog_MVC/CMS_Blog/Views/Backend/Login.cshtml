@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/signin.css" rel="stylesheet">

@using (Html.BeginForm("Login", "Backend", null, FormMethod.Post, null, new { @class = "form-signin" }))
{
    <img class="mb-4" src="@Url.Content("~/Images/favicon.png")" alt="" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Bitte einloggen</h1>
    <label for="inputEmail" class="sr-only">Email Adresse</label>
    @Html.TextBox("Name", null, new { @class = "form-control", @placeholder = "Email Adresse" })
    <label for="inputPassword" class="sr-only">Passwort</label>
    @Html.Password("Password", null, new { @class = "form-control", @placeholder = "Passwort" })
    <input class="btn btn-lg btn-primary btn-block" value="Einloggen" type="submit" />

    @if (ViewData["Error"] != null)
    {
        <label class="text-danger">Login fehlgeschlagen</label>
    }

    <p class="mt-5 mb-3 text-muted">&copy; 2018</p>
}
<script type="text/javascript" src="~/js_jquery/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="~/js_devextreme/dx.all.js"></script>
<script type="text/javascript" src="~/js_bootstrap/bootstrap.min.js"></script>