@model IEnumerable<CMS_Blog.Models.User>

@{
    ViewBag.Title = "Backend Index";
    ViewData["Title"] = "Backend Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.Partial("~/Views/Shared/_BackendNavBar.cshtml")

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml", CMS_Blog.Models.Blog.Get())

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <!-- Überschrift -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Benutzerverwaltung</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2"></div>
                </div>
            </div>

            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">TEAM</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</a>
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Contact</a>
                </div>
            </nav>
            <div class="tab-content bg-white border-left border-bottom border-right shadow-sm p-3 mb-5 bg-white rounded" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

                    <div class="card-body">

                        <button type="button" class="btn btn-default float-right"><span data-feather="user-plus"></span><span> </span><span>hinzufügen</span></button>

                    </div>

                    <div class="card-body">
                        <div class="list-group">
                           
                            @foreach (var item in Model)
                            {
                                <button type="button" class="list-group-item list-group-item-action">
                                    <p class="btn btn-default btn-circle"><span data-feather="user"></span></p>
                                    <span><b>@Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname)</b> <i>(@Html.DisplayFor(modelItem => item.Alias))</i></span>
                                    <p>@Html.DisplayFor(modelItem => item.Email)</p>
                                </button>
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">

                        <textarea name="content" id="editor">

                    </textarea>

                    </div>
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
                </div>
            </div>
            <!--
            <div class="card mb-4 w-75">
                <ul class="nav">
                    <li class="nav-item border-bottom border-dark">
                        <a class="nav-link text-dark" href="#">Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>
                </ul>
            </div>


            <div class="card w-75">
                <div class="card-body">
                    @Html.Partial("~/Views/Backend/AddUser.cshtml")

                   <!--<img class="w-50 h-50" src="@Url.Content("~/Images/user.png")" />-->
            <!--
                            </div>
                        </div>
            -->
        </main>

    </div>

</div>

<script type="text/javascript" src="~/js_jquery/jquery-3.3.1.min.js"></script>
